{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:base"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "prom/prometheus"
      ],
      "allowedVersions": "/^v[0-9]+\\.[0-9]+\\.[2-9]+$/",
      "automerge": true
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [".*.job"],
      "matchStringsStrategy": "any",
      "matchStrings": [".*image = (?<depName>\\S*):(?<currentValue>\\S*)"],
      "datasourceTemplate": "docker"
    }
  ]
}
